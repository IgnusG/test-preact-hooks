{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:react/recommended", "plugin:prettier/recommended"],
  "plugins": ["@typescript-eslint", "react-hooks"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react/prop-types": 0
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
