{
  "name": "test-react-hooks",
  "version": "2.0.0",
  "description": "Testing for react hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:andrew-w-ross/test-react-hooks.git",
  "author": "Andrew Ross <rossirsa@gmail.com>",
  "license": "MIT",
  "private": false,
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "docts": "^0.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.4.0",
    "jest": "^24.1.0",
    "majestic": "^1.4.1",
    "prettier": "^1.16.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "typescript": "^3.3.1"
  },
  "scripts": {
    "test": "jest",
    "fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "check": "eslint src/**/*.{ts,tsx,js,jsx}",
    "clean": "rm -rf dist",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:babel": "babel src --out-dir dist --extensions '.ts,.tsx' --ignore '**/__tests__'",
    "build": "yarn clean && yarn build:tsc && yarn build:babel",
    "prepare": "yarn check && yarn build"
  },
  "jest": {
    "clearMocks": true,
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFilesAfterEnv": [
      "./setup.js"
    ]
  },
  "keywords": [
    "react",
    "hooks",
    "testing"
  ]
}
